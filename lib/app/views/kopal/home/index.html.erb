<%= render :partial => 'navigation' %>

<h2>Identity</h2>
<% if @signed %>
  <p class="helper"><%= link_to(t(:edit_profile), Kopal.route.edit_profile,
    {:title => t(:edit_your_profile)}) %></p>
<% end %>
<% if @profile_user.created_identity? %>
  <table>
    <tr>
      <td><%=  t :name %></td>
      <td><%= @profile_user.feed.name %></td>
    </tr>
    <tr>
      <td><%= t :aliases %></td>
      <td><%= @profile_user.feed.aliases.unshift(
        @profile_user.feed.real_name).join("<br />") %></td>
    </tr>
    <tr>
      <td><%= t :about_me %></td>
      <td><%= @profile_user.feed.description%></td>
    </tr>
    <tr>
      <td><%= t :gender %></td>
      <td><%= @profile_user.feed.gender %></td>
    </tr>
    <tr>
      <td><%= t :date_of_birth %></td>
      <td><%= @profile_user.dob_with_age %></td>
    </tr>
    <tr>
      <td><%= t :country %></td>
      <td><%= @profile_user.feed.country_living_with_code %></td>
    </tr>
    <tr>
      <td><%= t :city %></td>
      <td><%= @profile_user.feed.city_with_code %></td>
    </tr>
  </table>
<% else %>
  <p><%= t :user_has_not_yet_created_her_identity %></p>
<% end %>