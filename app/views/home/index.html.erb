<%= render :partial => 'navigation' %>

<h2>Identity</h2>
<% if @signed %>
  <p class="helper"><%= link_to(t(:edit_profile), edit_profile_path,
    {:title => t(:edit_your_profile)}) %></p>
<% end %>
<% if @profile_user.created_identity? %>
  <table>
    <tr>
      <td><%=  t :name %></td>
      <td><%= @profile_user.name %></td>
    </tr>
    <tr>
      <td><%= t :aliases %></td>
      <td><%= @profile_user.aliases.join("<br />") %></td>
    </tr>
    <tr>
      <td><%= t :about_me %></td>
      <td><%= @profile_user.description%></td>
    </tr>
    <tr>
      <td><%= t :gender %></td>
      <td><%= @profile_user.gender %></td>
    </tr>
    <tr>
      <td><%= t :date_of_birth %></td>
      <td><%= @profile_user.dob_string %></td>
    </tr>
    <tr>
      <td><%= t :country %></td>
      <td><%= @profile_user.country_with_code %></td>
    </tr>
    <tr>
      <td><%= t :city %></td>
      <td><%= @profile_user.city_with_code %></td>
    </tr>
  </table>
<% else %>
  <p><%= t :user_has_not_yet_created_her_identity %></p>
<% end %>