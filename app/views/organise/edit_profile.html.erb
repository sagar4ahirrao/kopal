
<h2>Edit your profile -</h2>
<% form_tag do %>
    <table>
    <tr>
      <td><%=  t :real_name %></td>
      <td><%= text_field_tag :feed_name, Kopal["feed_name"] %></td>
    </tr>
    <tr>
      <td><%= t :aliases %></td>
      <td><%= text_area_tag :feed_aliases, Kopal[:feed_aliases]
        %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>(<%= t :separate_aliases_by_newline %>)</td>
    </tr>
    <tr>
      <td><%= t :preferred_calling_name %></td>
      <td><%= select_tag :preferred_calling_name,
        options_for_select(Kopal[:feed_aliases].to_a("\n").
          unshift(Kopal["feed_name"]).map {|s| s.strip},
          Kopal[:preferred_calling_name]) %></td>
    </tr>
    <tr>
      <td><%= t :about_me %></td>
      <td><%= text_area_tag :feed_description, Kopal["feed_description"] %></td>
    </tr>
    <tr>
      <td><%= t :gender %></td>
      <td><%= select_tag :feed_gender, options_for_select({t(:male) => :male, t(:female) => :female},
        Kopal["feed_gender"]) %></td>
    </tr>
    <tr>
      <td><%= t :date_of_birth %></td>
      <td><%= date_select :feed_birth_time, Kopal["feed_birth_time"],
            :order => [:day, :month, :year], :start_year => Time.now.year-140,
            :end_year => Time.now.year,
            :default => Kopal["feed_birth_time"] %></td>
    </tr>
    <tr>
      <td><%= t :show_date_of_birth %>?</td>
      <td><%= select_tag :birth_time_pref,
        options_for_select({:ymd => t(:show_full_dob), :y => t(:show_only_age),
          :md => t(:show_only_month_and_date), :nothing => t(:dont_show)}.invert,
          Kopal["birth_time_pref"] || :ymd) %></td>
    </tr>
    <tr>
      <td><%= t :country %></td>
      <td><%= select_tag(:feed_country_living_code, options_for_select(country_list.invert.sort,
        Kopal["feed_country_living_code"].to_sym)) %></td>
    </tr>
    <tr>
      <td><%= t :city %></td>
      <td><%= text_field_tag :city, city_list[Kopal[:feed_city].to_sym] || Kopal[:feed_city] %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag %></td>
    </tr>
  </table>
<% end %>